<div class="bg-img">
  <div class="bg-mask py-5">
    <%= form_for @contact, :url => contact_confirm_path do |f| %>
      <% if @contact.errors.any? %>
          <strong>入力内容にエラーがあります</strong>
          <ul>
            <% @contact.errors.each do |attr, msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
      <% end %>

      <div class="container bg-default">
        <div class="form-group">
          <label class="font-weight-bold">名前（必須）</label>
          <%= f.text_field :name, class: "form-control", placeholder:"名前" %>
        </div>

        <div class="form-group">
          <label class="font-weight-bold">メールアドレス（必須）</label>
          <%= f.text_field :email, class: "form-control", placeholder:"メールアドレス" %>
        </div>

        <div class="form-group">
          <label class="font-weight-bold">お問い合わせ内容</label>
          <%= f.text_area :message, class: "form-control",
          placeholder:"なんでも書いてね！", rows: 5 %>
        </div>

        <div class="text-center">
          <%= f.submit '確認', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
