<div class="bg-img">
  <div class="bg-mask py-5">
    <%= form_for @contact, :url => contact_thanks_path do |f| %>
      <div class="container">

        <div class="text-center">
          <h4 class="font-weight-bold">こちらの内容を送信します。<br>
            送信ボタンを押してください。</h4>
        </div>

        <div class="form-group mt-5">
          <label class="font-weight-bold">名前（必須）</label>
          <%= f.text_field :name, class: "form-control",
            value: @contact.name, readonly: true %>
        </div>

        <div class="form-group">
          <label class="font-weight-bold">メールアドレス（必須）</label>
          <%= f.text_field :email, class: "form-control",
            value: @contact.email, readonly: true %>
        </div>

        <div class="form-group">
          <label class="font-weight-bold">お問い合わせ内容</label>
          <%= f.text_area :message, class: "form-control",
            value: @contact.message, rows: 5, readonly: true %>
        </div>

        <div class="text-center">
          <%= f.submit '送信', class: "btn btn-primary" %>
        </div>

      </div>
    <% end %>
  </div>
</div>
